{
  "name": "ripple-rest",
  "version": "0.0.1",
  "author": "Evan Schwartz <evan@ripple.com>",
  "description": "A simplified interface to the Ripple network through a Javascript library and RESTful API",
  "scripts": {
    "start": "node server.js",
    "test": "./node_modules/.bin/grunt test",
    "preinstall": "if [ -d .git ]; then eval \"git pull\"; else echo 'Directory \"'$PWD'\" is not a git repository, cannot run \"git pull\"'; fi",
    "postinstall": "./node_modules/.bin/grunt dbsetup"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ripple/ripple-rest.git"
  },
  "main": "server.js",
  "keywords": [
    "ripple-rest",
    "ripple",
    "ripple-lib",
    "payments",
    "rest",
    "restful"
  ],
  "engines": {
    "node": "~0.10.22"
  },
  "devDependencies": {
    "mocha": "*",
    "chai": "*",
    "grunt-contrib-jshint": "~0.8.0",
    "grunt-contrib-watch": "~0.5.3",
    "grunt-simple-mocha": "*",
    "grunt-express": "~1.2.1",
    "grunt-express-server": "~0.4.11",
    "grunt-nodemon": "~0.1.2",
    "sinon": "~1.7.3",
    "sinon-chai": "~2.4.0",
    "clone": "~0.1.11"
  },
  "dependencies": {
    "express": "~3.4.7",
    "ripple-lib": "*",
    "node-validator": "~0.1.1",
    "validator": "~3.0.0",
    "underscore": "~1.5.2",
    "db-migrate": "~0.6.3",
    "sequelize": "~2.0.0-dev1",
    "pg": "~2.11.0",
    "sequelize-postgres": "~2.0.0-beta.2",
    "async": "~0.2.9",
    "lodash": "~2.4.1",
    "bignumber.js": "~1.3.0",
    "deep-equal": "~0.2.1",
    "nconf": "~0.6.9",
    "rconsole": "~0.2.0",
    "grunt": "~0.4.2",
    "grunt-db-migrate": "~0.1.4",
    "grunt-cli": "~0.1.13",
    "tv4": "~1.0.16"
  }
}
